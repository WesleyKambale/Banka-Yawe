<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".LoanApplyActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardElevation="5dp"
        android:layout_marginTop="-20dp"

        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginBottom="47dp"
        app:cardCornerRadius="20dp" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="27dp"
            android:paddingTop="20dp"
            android:background="@drawable/bottom_corner_rect"
            android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="34dp"
        android:src="@drawable/ic_back"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/blue"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="35dp"
        android:lineSpacingExtra="4sp"
       android:text="Looking for a Loan" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#3d2582"
            android:lineSpacingExtra="3sp"
            android:text="Required Loan Amount" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#3d2582"
            android:lineSpacingExtra="4sp"
            android:text="$20000"
            android:layout_marginTop="7dp"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:thumbOffset="15dp"
            android:layout_marginTop="25dp"
            android:progressDrawable="@drawable/seekbar_drawable_progress"
            android:thumb="@drawable/seekbar_drawable_thumb"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#3d2582"
                android:lineSpacingExtra="2sp"
                android:text="$1000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#3d2582"
                android:lineSpacingExtra="2sp"
                android:text="$50.000" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:lineSpacingExtra="3sp"
            android:layout_marginTop="50dp"
            android:text="Loan Tenuture" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:id="@+id/rvLoan"
        android:paddingTop="10dp"
        android:paddingLeft="34dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="34dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#3d2582"
                android:lineSpacingExtra="3sp"
                android:text="Estimated EMI" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#3d2582"
                android:lineSpacingExtra="2sp"
                android:text="(as per historical data)" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#3d2582"
            android:layout_gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="$632.29"
            />
    </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#3d2582"
                android:lineSpacingExtra="2sp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="50dp"
                android:text="Unhealthy uterus or ovarian cyst .Woman uterus concept. Vector modern
style cartoon character illustration"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_btn_rect"
                android:text="Proceed"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginBottom="25dp"
                android:textSize="15sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>